def find_table(corr_id, conn):

    search = sqlio.read_sql_query(
        """
        SELECT *
        FROM log_messages
        WHERE correlation_id='{}'
        """.format(corr_id),
        conn
    )

    if search.empty:
        return 'log_iniciatives'
    else:
        return 'log_messages'

